{
	"name": "proto-to-trpc",
	"version": "0.2.2",
	"description": "Generate ConnectRPC TypeScript clients and fully-typed tRPC routers from .proto files using a simple CLI.",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.mjs",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.mjs"
		}
	},
	"types": "./dist/index.d.ts",
	"bin": {
		"proto-to-trpc": "./dist/cli.mjs"
	},
	"files": ["dist", "deps", "README.md", "LICENSE", "CHANGELOG.md", "docs"],
	"scripts": {
		"build": "tsup",
		"lint": "biome lint . --fix",
		"format": "biome format . --fix",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:coverage": "vitest --coverage",
		"codegen": "node ./dist/cli.mjs --proto_dir=./proto --out=./src/gen",
		"codegen:fixtures": "bash scripts/codegen-fixtures.sh",
		"codegen:fixtures:connect-only": "bash scripts/codegen-connect.sh"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"trpc",
		"connectrpc",
		"protobuf",
		"codegen",
		"typescript",
		"nextjs"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/farisashai/proto-to-trpc.git"
	},
	"bugs": {
		"url": "https://github.com/farisashai/proto-to-trpc/issues"
	},
	"homepage": "https://github.com/farisashai/proto-to-trpc#readme",
	"sideEffects": false,
	"dependencies": {
		"@bufbuild/protobuf": "^1.10.0",
		"@bufbuild/protoc-gen-es": "^1.10.0",
		"@connectrpc/protoc-gen-connect-es": "^1.7.0",
		"@protobuf-ts/protoc": "^2.9.4",
		"chokidar": "^3.6.0",
		"fast-glob": "^3.3.2",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@connectrpc/connect": "^1.4.0",
		"@trpc/client": "^11.0.0-rc.0",
		"@trpc/server": "^11.0.0-rc.0",
		"@types/node": "^22.0.0",
		"@types/yargs": "^17.0.32",
		"@vitest/coverage-v8": "^2.0.0",
		"google-proto-files": "^5.0.1",
		"tsup": "^8.0.1",
		"typescript": "^5.6.3",
		"vitest": "^2.0.0"
	},
	"peerDependencies": {
		"@bufbuild/protovalidate": ">=1.0.0",
		"@connectrpc/connect": ">=1.0.0",
		"@trpc/client": ">=10.0.0",
		"@trpc/server": ">=10.0.0",
		"google-proto-files": ">=4.0.0"
	},
	"peerDependenciesMeta": {
		"@bufbuild/protovalidate": {
			"optional": true
		},
		"@connectrpc/connect": {
			"optional": false
		},
		"@trpc/client": {
			"optional": false
		},
		"@trpc/server": {
			"optional": false
		},
		"google-proto-files": {
			"optional": true
		}
	}
}
